{
  "name": "plugwise-mcp-server",
  "version": "1.0.10",
  "description": "MCP server for Plugwise integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "plugwise-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod 755 dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test:connection": "npm run build && node dist/scripts/test-mcp-connection.js",
    "test:devices": "npm run build && node dist/scripts/test-device-discovery.js",
    "agent": "tsx src/cli/plugwise-agent-cli.ts",
    "agent:build": "npm run build && tsx src/cli/plugwise-agent-cli.ts",
    "doPublish": "npm run build && npm version patch && npm publish"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "plugwise"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/google": "^2.0.43",
    "@ai-sdk/openai": "^2.0.73",
    "@mastra/core": "^0.24.5",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@types/xml2js": "^0.4.14",
    "ai": "^5.0.102",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "xml2js": "^0.6.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
